@model Heavy.Web.ViewModels.RoleEditViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<h4>RoleEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<h3>角色的用户</h3>
<ul>
    @foreach (var user in Model.Users)
    {
        <li>@user.UserName</li>
    }
</ul>
<a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">为角色添加用户</a>
<a asp-action="RemoveUserFromRole" asp-route-roleId="@Model.Id" class="btn btn-danger">从角色移除用户</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

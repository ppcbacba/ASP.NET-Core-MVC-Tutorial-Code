@model Heavy.Web.ViewModels.UserRoleViewModel

@{ ViewBag.Title = "从角色删除用户";}

<h2>@ViewBag.Title</h2>
<form asp-action="RemoveUserFromRole" method="post">
    <input type="hidden" name="roleId" value="@Model.RoleId" />
    <select class="form-control" asp-for="UserId"
            asp-items="@(new MultiSelectList(Model.Users, "Id", "UserName"))">
        <option>---选择用户---</option>
    </select>
    <button type="submit" class="btn btn-danger">确定</button>
</form>